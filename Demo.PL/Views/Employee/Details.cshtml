@model EmployeeVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/LayOut/Mylayout.cshtml";
}

@section DataTableStyle{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}

<div class="block-header">
    <h2>Details For @Model.Name Employee</h2>
</div>

<label asp-for="Name">Employee Name</label>
<input type="text" class="form-control" asp-for="Name" readonly />
<span asp-validation-for="Name" class="text-danger font-blod"></span>
<br />
<label asp-for="Email">Email</label>
<input type="email" class="form-control" asp-for="Email" readonly />
<span asp-validation-for="Email" class="text-danger font-blod"></span>

<br />
<label asp-for="Salary">Salary</label>
<input type="number" class="form-control" asp-for="Salary" readonly />
<span asp-validation-for="Salary" class="text-danger font-blod"></span>

<br />
<label asp-for="Address">Address</label>
<input type="text" class="form-control" asp-for="Address" readonly />
<span asp-validation-for="Address" class="text-danger font-blod"></span>

<br />

<label asp-for="HireDate">HireDate</label>
<input type="date" class="form-control" asp-for="HireDate" readonly />
<span asp-validation-for="HireDate" class="text-danger font-blod"></span>

<br />
<label asp-for="Notes">Notes</label>
<textarea rows="3" class="form-control" asp-for="Notes" readonly></textarea>
<span asp-validation-for="Notes" class="text-danger font-blod"></span>
<br />

<select class="form-control" asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList">
    <option>Choose Department</option>
</select>

<div class="demo-checkbox">
    <input type="checkbox" asp-for="IsActive" checked="checked">
    <label asp-for="IsActive">IsActive</label>
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>



<center>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Return</a>
    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
</center>
